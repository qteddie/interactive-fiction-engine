    "dialogue": {
        "beginning": {
            "character": "David",
            "text": "這是哪裡，你們是誰。",
            "options": [
                {
                    "text": "問問身邊的人",
                    "next": "join_resistance"
                }
            ]
        },
        "join_resistance": {
            "character": "Lucy",
            "text": "你昏倒很久了，要不要加入我們團隊啊。",
            "options": [
                {
                    "text": "接受並加入",
                    "next": "mission_briefing"
                },
                {
                    "text": "拒絕並離開",
                    "next": "reject"
                }
            ]
        },
        "reject": {
            "character": "Lucy",
            "text": "似乎你沒辦法拒絕。",
            "options": [
                {
                    "text": "接受並加入",
                    "next": "mission_briefing"
                }
            ]
        },
        "mission_briefing": {
            "character": "Lucy",
            "text": "我們任務目標是，要癱瘓機器人保衛系統，你要加緊訓練一下。",
            "options": [
                {
                    "text": "出門探索",
                    "next": "explore_city"
                },
                {
                    "text": "開始訓練",
                    "next": "training"
                }
            ]
        },
        "explore_city": {
            "character": "David",
            "text": "我決定獨自探索這座城市，也許我能找回一些記憶。",
            "options": [
                {
                    "text": "繼續探索",
                    "next": "encounter_dog"
                }
            ]
        },
        "encounter_dog": {
            "character": "mechine_dog",
            "text": "凹凹凹凹。",
            "options": [
                {
                    "text": "似乎機器狗和你有某種聯繫並讓機器狗跟隨，繼續探索",
                    "next": "dog_follows"
                },
                {
                    "text": "這機器狗真醜，被嚇到回去訓練",
                    "next": "training"
                }
            ]
        },
        "dog_follows": {
            "character": "mechine_dog",
            "text": "旺旺（似乎很熟悉的樣子）。",
            "options": [
                {
                    "text": "遭遇機器人大軍",
                    "next": "robot_encounter"
                }
            ]
        },

        "training": {
            "character": "David",
            "text": "(瘋狂訓練）。",
            "options": [
                {
                    "text": "LUCY走過來",
                    "next": "get_boost"
                }
            ]
        },
        "get_boost": {
            "character": "Lucy",
            "text": "這是強化針，有危險可以使用。",
            "options": [
                {
                    "text": "拿著",
                    "next": "mission_start"
                }
            ]
        },
        "mission_start": {
            "character": "Lucy",
            "text": "機器人們又在執行“保衛”任務了,等等你跟在後面，我們來阻止它們。",
            "options": [
                {
                    "text": "跟著小隊出發",
                    "next": "battle"
                }
            ]
        },
        "battle": {
            "character": "Lucy",
            "text": "機器人們來給我們練手的是吧,如此輕鬆！",
            "options": [
                {
                    "text": "笑著打機器人",
                    "next": "battle2"
                }
            ]
        },
        "battle2": {
            "character": "Ironman",
            "text": "你們這群該死的蟲子怎麼又來搗亂",
            "options": [
                {
                    "text": "迎戰",
                    "next": "battle3"
                }
            ]
        },
        "battle3": {
            "character": "Lucy",
            "text": "他也是機器人嗎？怎麼這麼強",
            "options": [
                {
                    "text": "繼續觀望",
                    "next": "battle4"
                },
                {
                    "text": "使用強化針",
                    "next": "battle5"
                }
            ]
        },
        "battle4": {
            "character": "David",
            "text": "經過激烈打鬥後，目睹小隊為了救自己整隊覆滅",
            "options": [
                {
                    "text": "崩潰痛哭，離開夜城",
                    "next": "moon"
                }
            ]
        },
        "battle5": {
            "character": "David",
            "text": "使用強化針，能力增強後衝過去加入戰鬥",
            "options": [
                {
                    "text": "解決Ironman後,隨之而來的副作用是記憶永久消失了",
                    "next": "choose_ending"
                }
            ]
        },
        "choose_ending": {
            "character": "Ironman",
            "text": "（在結束運轉前，用沙沙機器音說）你可是創辦人啊。",
            "options": [
                {
                    "text": "覺得疑惑，但想追問時，他已經停止運轉，永遠沒有機會問了",
                    "next": "escape_city"
                },
                {
                    "text": "覺得可笑，多踹了他一腳",
                    "next": "escape_city"
                }
            ]
        },
        "dark_ruler": {
            "character": "David",
            "text": "我和反抗小組坦承了自己的企業主身份，回到企業，讓成為當初自己最討厭的樣子，世界照常運轉。",
            "options": [
                {
                    "text": "結束冒險",
                    "next": "end"
                }
            ]
        },
        "escape_city": {
            "character": "David",
            "text": "帶領著反抗小隊離開這座城市，繼續幫著下一座城市推翻管控。",
            "options": [
                {
                    "text": "結束冒險",
                    "next": "end"
                }
            ]
        },
        "destroy_corporation": {
            "character": "David",
            "text": "你將機器狗格式化，走向反抗小隊，城市秩序變得更加混亂。",
            "options": [
                {
                    "text": "結束冒險",
                    "next": "end"
                }
            ]
        },
        "moon": {
            "character": "David",
            "text": "帶著LUCY意志上月球。",
            "options": [
                {
                    "text": "好美",
                    "next": "end"
                }
            ]
        },
        "robot_encounter": {
            "character": "David",
            "text": "機器人看到機器狗後，在你面前整齊列隊。趕過來的反抗小隊也搞不清楚什麼情況",
            "options": [
                {
                    "text": "跟隨機器狗前往總部",
                    "next": "discover_truth"
                }
                
            ]
        },

        "discover_truth": {
            "character": "Ironman",
            "text": "主人你回來了，你應該知道這個世界的真相（使用機器狗回復記憶）機器狗是如同魔戒般的存在，所有機器人都聽從它的指揮，你則是機器的創造者。",
            "options": [
                {
                    "text": "真假，這些機器人是我管的?",
                    "next": "dark_truth"
                },
                {
                    "text": "不能接受這是自己一手打造的",
                    "next": "final_battle"
                }
            ]
        },
        "fimal_battle": {
            "character": "David",
            "text": "想要毀掉這萬惡之源，於是你指揮機器人和亞當打起來",
            "options": [
                {
                    "text": "雙方都受到重傷，而企業的統治力也不復存在",
                    "next": "destroy_corporation"
                }
            ]
        }
    }
}
