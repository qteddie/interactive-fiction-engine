    "dialogue": {
        "beginning": {
            "character": "David",
            "text": "這是哪裡，你們是誰。",
            "options": [
                {
                    "text": "問問身邊的人",
                    "next": "join_resistance"
                }
            ]
        },
        "join_resistance": {
            "character": "Lucy",
            "text": "你昏倒很久了，要不要加入我們團隊啊。",
            "options": [
                {
                    "text": "接受並加入",
                    "event": "Mission_briefing"
                },
                {
                    "text": "拒絕並試圖離開",
                    "next": "reject"
                }
            ]
        },
        "reject": {
            "character": "Lucy",
            "text": "（攔住）你似乎沒辦法拒絕。",
            "options": [
                {
                    "text": "接受並加入",
                    "event": "Mission_briefing"
                }
            ]
        },
        "mission_briefing": {
            "character": "Lucy",
            "text": "我們任務目標是，要癱瘓機器人保衛系統，你要加緊訓練一下。",
            "options": [
                {
                    "text": "先讓我出門了解一下這座城市",
                    "event": "Explore_city"
                },
                {
                    "text": "開始訓練",
                    "next": "training"
                },
                {
                    "text": "直接開睡",
                    "next": "sleep"
                }
            ]
        },
        "sleep": {
            "character": "Lucy",
            "text": "（搖搖頭）",
            "options": [
                {
                    "text": "（被踹醒)並且趕去訓練",
                    "next": "training"
                }
            ]
        },

        "explore_city": {
            "character": "David",
            "text": "我決定獨自探索這座城市，也許我能找回一些記憶。",
            "options": [
                {
                    "text": "繼續探索",
                    "next": "encounter_dog"
                }
            ]
        },
        "encounter_dog": {
            "character": "mechine_dog",
            "text": "凹凹凹凹。",
            "options": [
                {
                    "text": "似乎機器狗和你手錶上的狗有些類似並讓機器狗你蹲下來看它",
                    "next": "dog_follows"
                },
                {
                    "text": "這機器狗真醜，被嚇到回去訓練",
                    "event": "Training"
                }
            ]
        },
        "dog_follows": {
            "character": "mechine_dog",
            "text": "旺旺（似乎想告訴你什麼）。",
            "options": [
                {
                    "text": "繼續看它",
                    "next": "dog_follows"
                },
                {
                    "text": "站起來回去訓練",
                    "event": "Training"
                }
            ]
        },
        "take_watch": {
            "character": "David",
            "text": "（拿起手錶）按下中間表面",
            "options": [
                {
                    "text": "狗狗似乎觸發某種機關，蹲下來開始嚎叫",
                    "next": "robot_encounter"
                }
            ]
        },


        "training": {
            "character": "David",
            "text": "(瘋狂訓練）。",
            "options": [
                {
                    "text": "LUCY走過來",
                    "next": "get_boost"
                }
            ]
        },
        "get_boost": {
            "character": "Lucy",
            "text": "這是強化針，有副作用，到緊急時刻再使用。",
            "options": [
                {
                    "text": "拿著",
                    "next": "mission_start"
                }
            ]
        },
        "mission_start": {
            "character": "Lucy",
            "text": "機器人們又在執行“保衛”任務了,等等你跟在後面，我們來阻止它們。",
            "options": [
                {
                    "text": "跟著小隊出發",
                    "event": "Battle"
                }
            ]
        },
        "battle": {
            "character": "Lucy",
            "text": "這些保衛機器人們來給我們練手的是吧,如此輕鬆！",
            "options": [
                {
                    "text": "笑著打機器人",
                    "next": "battle2"
                }
            ]
        },
        "battle2": {
            "character": "Ironman",
            "text": "你們這群該死的蟲子怎麼又來搗亂",
            "options": [
                {
                    "text": "迎戰",
                    "next": "battle3"
                }
            ]
        },
        "battle3": {
            "character": "Lucy",
            "text": "他也是保衛機器人嗎？怎麼這麼強",
            "options": [
                {
                    "text": "（不知所措）繼續觀望",
                    "next": "battle4"
                },
                {
                    "text": "使用強化針",
                    "next": "battle5"
                }
            ]
        },
        "battle4": {
            "character": "Lucy",
            "text": "我們沒辦法打贏他，你快逃！",
            "options": [
                {
                    "text": "在逃跑途中，目睹反抗小隊被轟成碎片",
                    "next": "battlend"
                }
            ]
        },
        "battlend":{
            "character": "David",
            "text": "（看不下去隊友被這樣攻擊）",
            "options": [
                {
                    "text": "使用強化針（副作用是記憶永久消失了）",
                    "next": "battle6"
                }
            ]
        },
        "battle6": {
            "character": "David",
            "text": "靠著隊友造成的傷害加上強化針，將敵人打倒後，低頭望著隊友的屍體，心情很複雜",
            "options": [
                {
                    "text": "決定離開這座城市",
                    "event": "Moon"
                }
            ]
        },

        "battle5": {
            "character": "David",
            "text": "使用強化針，能力增強後衝過去加入戰鬥",
            "options": [
                {
                    "text": "解決Ironman後 感受到（副作用是記憶永久消失了）",
                    "next": "choose_ending"
                }
            ]
        },
        "losememory": {
            "character": "David",
            "text": "（從昏迷中醒來）這又是哪裡，你們是誰。",
            "options": [
                {
                    "text": "問問身邊的人",
                    "next": "join_resistance2"
                }
            ]
        },
        "join_resistance2": {
            "character": "Lucy",
            "text": "哈哈，要不要『再』加入我們團隊啊。",
            "options": [
                {
                    "text": "接受並加入",
                    "event": "Escape_city"
                }
                
            ]
        },

        "choose_ending": {
            "character": "Ironman",
            "text": "（在結束運轉前，用沙沙機器音說）你可是創辦人啊。",
            "options": [
                {
                    "text": "覺得疑惑，但想追問時，他已經停止運轉，永遠沒有機會問了,同時你也體力不支昏倒了",
                    "next": "losememory"
                },
                {
                    "text": "覺得可笑再補踹了一腳，之後體力不支也昏倒了",
                    "next": "losememory"
                }
            ]
        },
        "dark_ruler": {
            "character": "David",
            "text": "我和反抗小組坦承了自己的企業主身份，回到企業，讓成為當初自己最討厭的樣子，世界照常運轉。",
            "options": [
                {
                    "text": "結束冒險"
                    
                }
            ]
        },
        "escape_city": {
            "character": "David",
            "text": "跟著反抗小隊離開這座城市，繼續幫著下一座城市推翻管控。",
            "options": [
                {
                    "text": "結束冒險"
                    
                    
                }
            ]
        },
        "destroy_corporation": {
            "character": "David",
            "text": "你將機器狗格式化，走向反抗小隊，城市秩序變得更加混亂。",
            "options": [
                {
                    "text": "結束冒險"
                }
            ]
        },
        "moon": {
            "character": "David",
            "text": "好美，但怎麼感覺心空空的。",
            "options": [
                {
                    "text": "結束冒險"
                }
            ]
        },
        "robot_encounter": {
            "character": "David",
            "text": "機器人成群趕過來，在你和狗面前整齊列隊。趕過來的反抗小隊也搞不清楚什麼情況",
            "options": [
                {
                    "text": "和反抗小隊請教",
                    "event": "discusstion"
                }
            ]
        },
        "discusstion":{
            "character": "Lucy",
            "text": "我也搞不抬清楚，你看機器狗站起來了好戲要帶領我們去哪",
            "options": [
                {
                    "text": "跟著機器狗走",
                    "event": "Discover_truth"
                }
            ]
        },
        "discover_truth": {
            "character": "Ironman",
            "text": "主人你回來了，你應該知道這個世界的真相（使用機器狗回復記憶）機器狗只聽從手錶主人的命令，所有機器人都聽從機器狗的指揮，你則是機器的創造者。",
            "options": [
                {
                    "text": "真假，這些機器人是我管的?",
                    "next": "dark_ruler"
                },
                {
                    "text": "不能接受這是自己一手打造的",
                    "event": "Final_battle"
                }
            ]
        },
        "final_battle": {
            "character": "David",
            "text": "想要毀掉這萬惡之源，於是你指揮機器人和亞當打起來",
            "options": [
                {
                    "text": "雙方都受到重傷，而企業的統治力也不復存在",
                    "event": "Destroy_corporation"
                }
            ]
        }
    }
}
