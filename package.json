        "@sveltejs/vite-plugin-svelte": "^3.0.0",
        "@testing-library/svelte": "^5.1.0",
        "@types/eslint": "^8.56.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.35.1",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "prettier-plugin-svelte": "^3.1.2",
        "svelte": "^4.2.7",
        "svelte-check": "^3.6.0",
